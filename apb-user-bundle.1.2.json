{
  "manifests": {
    "apb/user-bundle": {
      "manifest": {
        "bundles": {
          "Apb\\UserBundle\\ApbUserBundle": [
            "all"
          ]
        },
        "copy-from-recipe": {
          "config/": "%CONFIG_DIR%"
        },
        "env": {
          "MAILER_SENDER": "userbundle@feelity.fr"
        },
        "gitignore": [
          "/%CONFIG_DIR%/jwt/*.pem"
        ],
        "post-install-output": [
          "  1. <bg=magenta;fg=white> Create jwt keys </>",
          "    * php bin/console lexik:jwt:generate-keypair --overwrite",
          "",
          "  2. <bg=magenta;fg=white> Update the database schema </>",
          "    * php bin/console d:s:u --force",
          "",
          "  3. <bg=magenta;fg=white> Configure user_bundle.yaml </>",
          "    * Create a file public/style/mailer.css if you want, otherwise a default font will be used",
          "    * Logo of your application is to be set in /public/img/logo.png",
          "",
          "  4. <bg=magenta;fg=white> Create league oauth credentials </>",
          "    * php bin/console league:oauth2-server:create-client project_name key secret --redirect-uri=uri --grant-type=password --grant-type=refresh_token --scope=USER",
          "",
          "  1. <bg=magenta;fg=white> Install node for mjml mailer</>",
          "    * npm install",
          ""
        ],
        "add-lines":[
          {
            "file": "config/packages/security.yaml",
            "position": "after_target",
            "warn_if_missing": true,
            "target": "    firewalls:",
            "content": "        api_token:\n            pattern: ^/token\n            security: false\n\n        api:\n            pattern: ^/api\n            security: true\n            stateless: true\n            oauth2: true\n            provider: app_user_provider"
          }
        ]
      },
      "files": {
        "script/install.yaml": {
          "contents": [
            "#!/bin/bash",
            "php bin/console lexik:jwt:generate-keypair --overwrite",
            "php bin/console d:s:u --force"
          ],
          "executable": false
        },
        "config/routes/user_bundle.yaml": {
          "contents": [
            "user_bundle.routes:",
            "   resource: '@ApbUserBundle/config/routes.yaml'",
            "\n"
          ],
          "executable": false
        },
        "config/packages/user_bundle.yaml": {
          "contents": [
            "user_bundle:\n#  mailer:\n#    apiUrl:\n#    projectName:\n#    sender:\n#    senderStr:\n#    style: '%kernel.project_dir%/public/style/mailer.css'\n#    logo:"
          ],
          "executable": false
        }
      },
      "ref": "c82bca82650b2d76b43021b9b8479eb0b343c56d"
    }
  }
}